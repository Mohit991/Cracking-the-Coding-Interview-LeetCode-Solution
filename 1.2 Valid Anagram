class Solution:
    def isAnagram(self, s: str, t: str) -> bool:
        if len(s) != len(t): return False
        memo = {}
        for i in s:
            if i in memo:
                memo[i] += 1
            else:
                memo[i] = 1
                
        for i in t:
            if i not in memo or memo[i] <= 0:
                return False
            else:
                memo[i] -= 1
                
        return True        
        
    #######################################################################
    
