class Solution:
    def compress(self, chars: List[str]) -> int:  
        i, j = 0, 0
        count = 1
        length = 0
        while i<len(chars):
            if i<len(chars)-1 and chars[i] == chars[i+1]:
                count += 1
            else:
                chars[j] = chars[i]
                j += 1
                length += 1
                if count>1:
                    for chr in str(count):
                        chars[j] = chr
                        j += 1
                        length += 1
                count = 1     
            i += 1      
            
        return length    
   
        
        #In the above code we convert the count to string using str() method. 
        
        ###############################################################################
        
        
        
class Solution:
    def compress(self, chars: List[str]) -> int:  
        i, j = 0, 0
        c = 1
        l = 0
        while i<len(chars):
            if i<len(chars)-1 and chars[i] == chars[i+1]:
                c += 1
            else:
                chars[j] = chars[i]
                j += 1
                l += 1
                if c>1 and c<10:
                    chars[j] = str(c)
                    j += 1
                    l += 1
                elif c>9:
                    digits = 0
                    ctemp = c
                    while ctemp>0:
                        ctemp = floor(ctemp/10)
                        digits += 1
                    l += digits
                    tempdigits = digits
                    while c>0:
                        x = c%10
                        c = floor(c/10)
                        chars[j+digits-1] = str(x)
                        digits -= 1
                    j += tempdigits    
                c = 1     
            i += 1
        return l
